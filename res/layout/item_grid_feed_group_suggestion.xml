<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/item_grid_feed_group_suggestion_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/feed_gallery_bg" />

    <TextView
        android:id="@+id/item_grid_feed_group_suggestion_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:padding="7dp"
        android:text="TellUs"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/item_grid_feed_group_suggestion_subscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/tellus_btn_default_holo_light"
        android:gravity="center"
        android:text="TellUs"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</FrameLayout>