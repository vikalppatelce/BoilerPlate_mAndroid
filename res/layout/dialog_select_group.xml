<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="220dp"
    android:layout_marginEnd="8dip"
    android:layout_marginStart="8dip"
    android:background="@drawable/shape_post_dialog"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_select_group_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text="Select group"
        android:textColor="@color/background_actionbar"
        android:textSize="22sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="2dp"
        android:background="@color/background_actionbar" />

    <EditText
        android:id="@+id/dialog_select_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tellus_edit_text_holo_light"
        android:hint="Search"
        android:singleLine="true" />

    <ListView
        android:id="@+id/dialog_select_group_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:minHeight="160dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:dividerHeight="2dp"
        android:fadingEdge="none"
        android:listSelector="@drawable/tellus_list_selector_holo_light" />

</LinearLayout>